@model IEnumerable<Model.EF.Review>

@{ ViewBag.Title = "Index";
                Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
                var grid = new WebGrid(source: Model, rowsPerPage: 5);
    @Scripts.Render("~/Scripts/jquery-1.6.2.min.js") }


<h2 style="text-align:center">QUẢN LÝ NGƯỜI XEM</h2>



<html>
<head>
    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }

            .grid-footer a {
                background-color: #ffffff;
                color: blue;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                padding: 1px 10px 2px 10px;
            }

                .grid-footer a:active, a:hover {
                    background-color: #ffffff;
                    color: #FFAD33;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                }

        .alternatingRowStyle {
            background-color: antiquewhite;
        }

        table .table1 {
            text-align: left;
            margin-left: 0px;
            margin-right: 0px;
            width: 800px;
        }

        .tr, .td {
            text-align: left;
        }
    </style>
</head>
<body>
    <div>
        @using (Html.BeginForm("Index", "Reviews", FormMethod.Post))
        {
    @Html.AntiForgeryToken()


                    <table class="table1" align="center">
                        <tr>
                            <td>
                                <div> Mã Người Xem</div>
                            </td>
                            <td>

                                <input style="margin-bottom:5px; margin-left:5px" type="text" name="maNX"
                                       class="form-control" id="inputEmail3" placeholder="TimKiem" value="@ViewBag.maNX">
                            </td>

                        </tr>
                        <tr>
                            <td>Mã Sách</td>
                            <td>

                                <input style="margin-bottom:5px; margin-left:5px" type="text" name="hoten" class="form-control"
                                       id="inputEmail3" placeholder="Tên Sách" value="@ViewBag.hoten">
                            </td>

                        </tr>

                        <tr>
                            <td></td>
                            <td>



                                <button type="submit" class="btn btn-success" style="width:100px; margin-left:5px">Tìm kiếm</button>
                                <button type="button" class="btn btn-danger" style="width:100px;
               " onclick="location.href='@Url.Action("Index", "Reviews/Index")'">
                                    Nhập mới
                                </button>
                            </td>
                        </tr>
                    </table>}
    </div>

    <hr />
    <p>
        @Html.ActionLink("Người Xem Mới", "Create")
    </p>
    <div id="gridContent">
        @ViewBag.TB
        @grid.GetHtml(
                              tableStyle: "table table-sm table-bordered table-hover table-striped",
                              headerStyle: "thead-dark",
                              footerStyle: "grid-footer",
                              fillEmptyRows: true,
                              mode: WebGridPagerModes.Numeric,
                              alternatingRowStyle: "alternatingRowStyle",
                              columns: new[]  // colums in grid
                              {
          grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
          grid.Column("ReviewID","Mã Người Xem"),
          grid.Column("BookID","Mã Sách"),
            
            grid.Column("Content","Bình Luận"  ),
            grid.Column("Customer.CustomerAddress","Địa Chỉ"),

            grid.Column("ReviewByDate","Ngày Bình Luận",format:@<text> @item.ReviewByDate.ToString("dd/MM/yyyy")</text>),
            grid.Column("Chức năng", format: @<text>
                <a href="@Url.Action("Edit",
                        new { id = item.ReviewID})" class="edit-btn"><abbr title="Cập nhật dữ liệu"><img src="/images/edit.png" width="20" height="20" /></abbr></a>
                <a href="@Url.Action("Details",
                        new { id = item.ReviewID})" class="edit-btn"><abbr title="Xem chi tiết"><img src="/images/details.png" width="20" height="20" /></abbr></a>
                <a href="@Url.Action("Delete",
                        new { id = item.ReviewID})" class="edit-btn"><abbr title="Xóa dữ liệu"><img src="/images/delete.png" width="20" height="20" /></abbr></a>
            </text>),
                                                  }
                                                                                              )
    </div>
</body>
</html>